<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="SecondAdmin">
	<resultMap type="com.kh.eg.secondAdmin.model.vo.SecondAdmin" id="SecondAdminResultSet">
		<result property="categoryName" column="CATEGORYNAME"/>
		<result property="categoryNo" column="CATEGORYNO"/>
		<result property="upperCNO" column="UPPERCATEGORYNO"/>
	</resultMap>
	<select id="categoryName" resultMap="SecondAdminResultSet">
		SELECT CATEGORYNAME,CATEGORYNO FROM CATEGORY WHERE CATEGORYLEVEL = 0
	</select>
	
	<select id="categoryCount" parameterType="java.lang.Integer"   resultType="_int" >
		SELECT COUNT(*) FROM AUCTIONITEM A JOIN CATEGORY C ON(A.CATEGORYNO = C.CATEGORYNO) WHERE C.UPPERCATEGORYNO = #{i}
	</select>
	
	<!-- <select id="searchCategoryCount" parameterType="java.lang.String" resultType="_int">
			
	</select> -->
</mapper>